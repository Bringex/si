#include <stdio.h>
#include <stdio.h>
#include <string.h>
#include <malloc.h>

//3
int lenNum(int num){
  int count = 0;
  while (num / 10 > 0)
  {
    count++;
    num /= 10;
  }
  return count;
}
char *convert(int num1, int num2, int num3){

  char* str1 = malloc(sizeof(char) * lenNum(num1));
  char* str2 = malloc(sizeof(char) * lenNum(num2));
  char* str3 = malloc(sizeof(char) * lenNum(num3));
  char* result = malloc(sizeof(char) * (lenNum(num3) + lenNum(num1) + lenNum(num2)));
  int index = 0;
  
  sprintf(str1, "%d", num1);
  sprintf(str2, "%d", num2);
  sprintf(str3, "%d", num3);
  strcpy(result, "");
  strcat(result, strcat(str1, "."));
  strcat(result, strcat(str2, "."));
  strcat(result, strcat(str3, "\n"));
  printf("%s", result);
  
  return result;
}


int main()
{ 
  FILE * file;
  FILE * file1;
  if ((file = fopen("date.txt", "w+")) != NULL )
  {

    for (int i = 29; i <= 31; i++)
        fprintf(file, convert(i, 10, 2020));    
    for (int i = 1; i <= 7; i++)
        fprintf(file, convert(i, 11, 2020)); 
    
    
    fclose(file);
  }
  
  return 0;
}



#3
#include <stdio.h>
#include <stdio.h>
#include <malloc.h>


int main()
{
  FILE * file1 = fopen("date.txt", "w+");
  FILE * file2 = fopen("date1.txt", "w+");
  FILE * file3;
  char data1[30];
  char data2[30];
  

  if (file1 != NULL && file2 != NULL )
  {
    fprintf(file1, "file1");    
    fprintf(file2, "file2");     
    fclose(file1);
    fclose(file2);
  }

  file1 = fopen("date.txt", "r");
  file2 = fopen("date1.txt", "r");
  file3 = fopen("date2.txt", "w+");

  if (file1 != NULL && file2 != NULL && file3 != NULL)
  {
    fgets(data1, 30, file1);
    fgets(data2, 30, file2);
    fprintf(file3, data1);
    fprintf(file3, "\n");
    fprintf(file3, data2);
     

    //printf("%s", data1);


    fclose(file1);
    fclose(file2);
    fclose(file3);
  }
  
  return 0;
}
