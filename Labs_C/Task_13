{
    //int argc, char* argv[]
    //char *locale = setlocale(LC_ALL, "");

    //printf("%\ns", argv[1]);
    //printf("%\ns", argv[2]);

    char* buffer = "full4.mp3";
    //header head;

    show(buffer);
    //get(buffer, "TIT2");
    //get(buffer, "TPE1");
    //get(buffer, "TPE2");

    set(buffer, "TIT2", "xuy jopa");
    set(buffer, "TPE1", "poshel naxuy");
